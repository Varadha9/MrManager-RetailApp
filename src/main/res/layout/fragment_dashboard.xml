<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Stock Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_items_in_stock"
                    android:text="--"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="In Stock"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_low_stock"
                    android:text="--"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Low Stock"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#E8F5E9"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_total_value"
                    android:text="--"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Total Value"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>
        </LinearLayout>

        <!-- Add Item Card -->
        <LinearLayout
            android:id="@+id/card_add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#BBDEFB"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="➕  Add Item"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- View Inventory Card -->
        <LinearLayout
            android:id="@+id/card_view_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#C8E6C9"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📦  View Inventory"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Scan Item Card -->
        <LinearLayout
            android:id="@+id/card_scan_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📷  Scan Item"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Delete Item Card -->
        <LinearLayout
            android:id="@+id/card_delete_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#FFCDD2"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🗑️  Delete Item"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
